{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "strict": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "outDir": "./dist",
    "rootDir": ".",
    "paths": {
      "@emo-adapters/*": ["./packages/adapters/*"],
      "@emo-components/*": ["./packages/components/*"],
      "@emo-middlewares/*": ["./packages/middlewares/*"],
      "@emo-session/*": ["./packages/session/*"]
    }
  },
  "exclude": ["node_modules"]
}
