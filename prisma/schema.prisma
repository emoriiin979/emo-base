generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String  @id
  name      String
  password  String

  @@map("users")
}

model Login {
  id          Int       @id @default(autoincrement())
  ip          String
  name        String?   // ユーザーが存在しない場合は null
  success     Boolean
  created_at  DateTime  @default(now())

  @@map("logins")
  @@index([ip])
  @@index([created_at])
}
