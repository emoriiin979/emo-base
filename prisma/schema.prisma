generator client {
  provider = "prisma-client-js"
  output   = "../app/models"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String  @id
  name      String
  password  String
  contents  Content[]

  @@map("users")
}

model Login {
  id          Int       @id @default(autoincrement())
  ip          String
  name        String?   // ユーザーが存在しない場合は null
  success     Boolean
  created_at  DateTime  @default(now())

  @@map("logins")
  @@index([ip])
  @@index([created_at])
}

model Content {
  id          String    @id @default(uuid())
  user        User      @relation(fields: [user_id], references: [id])
  user_id     String    @map("user_id")
  title       String
  body        String    @db.Text
  created_at  DateTime  @default(now())

  @@map("contents")
}
